<header class="navbar navbar-fixed-top navbar-inverse header">
  <div class="container navigation">
    <%= link_to "Creative Outlet", root_path %>
    <ul>
      <% if logged_in? %>
      <ul>
        <% if current_user.profile_image.attached? %>
          <li> <%= image_tag current_user.profile_image.variant(resize: "20") %> </li>
        <% end %>
        <li> <%= link_to "#{current_user.name}", user_path(current_user.id) %> </li>
        <li> <%= link_to "Logout", logout_path, method: :delete%> </li>
        <% if request.path == '/posts/new' %>
          <li> <button type="submit" form="new-article"> Publish </button> </li>
        <% else %>
          <li id="add-post"> <%= link_to "+", new_post_path%> </li>
        <% end %>
      </ul>
      <% else %>
      <ul>
        <li><%= link_to "Log in", login_path%></li>
        <li><%= link_to "Sign up", new_user_path%> </li>
      </ul>
      <% end %>
    </ul>
  </div>
</header>
