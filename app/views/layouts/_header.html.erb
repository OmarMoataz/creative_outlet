<header class="navbar navbar-fixed-top navbar-inverse header">
  <div class="container">
    <%= link_to "Members Only", root_path, class: "btn" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <ul>
            <li> <%= link_to "#{current_user.name}", user_path(current_user.id), class: 'btn' %> </li>
            <li> <%= link_to "Logout", logout_path, method: :delete, class: 'btn' %> </li>
            <li id="add-post"> <%= link_to "+", new_post_path, class: 'btn' %> </li>
          </ul>
        <% else %>
          <ul>
            <li><%= link_to "Log in", login_path, class: "btn" %></li>
            <li><%= link_to "Sign up", new_user_path, class: "btn" %> </li>
          </ul>
        <% end %>
      </ul>
    </nav>
  </div>
</header>