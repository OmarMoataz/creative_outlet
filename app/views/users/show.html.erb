<div class="col-md-8">
  <p> <%= @user.name %> </p>
  <p> <%= @user.email %> </p>
  <p> <%= @user.followers.count %> followers </p>
  <p> <%= @user.following.count %> following </p>
    <% unless current_user.nil? %>
      <% unless current_user.following?(@user) %>
        <%= link_to "follow", follow_user_path(@user.id), method: "post" if current_user != @user %>
      <% else %>
        <%= link_to "unfollow", unfollow_user_path(@user.id), method: "post" %>
      <% end %>
    <% else %>
      <%= link_to "follow", login_path %>
    <% end  %>
</div>