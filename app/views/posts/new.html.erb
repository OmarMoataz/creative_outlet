<div class="container">
  <h1> New Post </h1>    
</div>
<div class="container">
  <div class="row"> 
    <div class="col-md-6">
      <%= form_for @post do |f| %>
      <% if flash[:danger] %>
      <div class="danger"> <%= flash[:danger] %> </div>
      <% end %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>

      <%= f.label :thumbnail %>
      <%= f.file_field :thumbnail, class: 'form-control' %>

      <%= f.submit "Create Post", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
