<h1> New Post </h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3" >
    <%= form_for @post do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: "form_control" %>

      <%= f.label :content %>
      <%= f.text_area :content, class: "form_control" %> 

    <% end %>
  </div>
</div>