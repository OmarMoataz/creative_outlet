<h1> New Post </h1>


<div class="row">
  <div class="col-md-6" >
    <%= form_for @post do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :content %>
      <%= f.text_area :content %> 

      <%= f.submit "Create Post", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>